{
    "name": "@repo/ptat",
    "version": "0.0.0",
    "private": true,
    "license": "UNLICENSED",
    "type": "module",
    "workspaces": [
        "./apps/*",
        "./packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint lint:root --continue=dependencies-successful",
        "lint:fix": "npm run lint -- -- --fix && npm run lint:prettier -- -- --write",
        "lint:package-lock": "check-package-lock",
        "lint:prettier": "turbo run lint:prettier lint:prettier:root --continue=dependencies-successful",
        "lint:prettier:root": "prettier --check . --ignore-path .gitignore --ignore-path .root.prettierignore",
        "lint:root": "eslint --ignore-pattern '{packages,apps}/'",
        "lint:shellcheck": "shellcheck-all",
        "prepare": "husky && prisma generate --no-hints",
        "typecheck": "turbo run typecheck typecheck:root",
        "typecheck:root": "tsc --noEmit"
    },
    "devDependencies": {
        "@pentible/check-package-lock": "0.113.0",
        "@pentible/eslint-config": "0.113.0",
        "@pentible/eslint-config-expo": "0.113.0",
        "@pentible/eslint-config-next": "0.113.0",
        "@pentible/eslint-config-node": "0.113.0",
        "@pentible/eslint-config-prettier": "0.113.0",
        "@pentible/eslint-config-react": "0.113.0",
        "@pentible/eslint-config-web": "0.113.0",
        "@pentible/prettier": "0.113.0",
        "@pentible/shellcheck-all": "0.113.0",
        "@pentible/tsconfig": "0.113.0",
        "eslint": "9.29.0",
        "husky": "9.1.7",
        "lint-staged": "16.1.2",
        "prettier": "3.5.3",
        "prettier-plugin-tailwindcss": "0.6.12",
        "tsx": "4.20.3",
        "turbo": "2.5.4",
        "typescript": "5.8.3"
    },
    "packageManager": "npm@11.4.2",
    "engines": {
        "node": "^22"
    }
}
